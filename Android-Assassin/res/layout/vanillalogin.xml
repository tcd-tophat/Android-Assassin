            <EditText android:id="@+id/editText1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="0.10" android:inputType="textEmailAddress" android:hint="Email Address">
                <requestFocus></requestFocus>
            </EditText>
            <EditText android:id="@+id/editText2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="0.10" android:inputType="textPassword" android:hint="Secret Password"></EditText>
            <ImageView android:paddingBottom="40px" android:layout_width="304dp" android:layout_height="wrap_content" android:src="@drawable/login_register" android:id="@+id/imageView1" android:onClick="loginButtonHandler"></ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>